{
    "name": "webpack-multilang-i18n-plugin",
    "version": "1.2.1",
    "description": "Webpack Multi Language I18n Plugin",
    "main": "dist/cjs.js",
    "scripts": {
        "build": "cross-env NODE_ENV=production babel src -d dist --ignore 'src/**/*.test.js'",
        "lint": "eslint --cache src test",
        "security": "npm audit --audit-level high",
        "test": "jest",
        "test:coverage": "jest --collectCoverageFrom='src/**/*.js' --coverage",
        "travis:coverage": "npm run test:coverage -- --runInBand",
        "travis:lint": "npm run lint && npm run security",
        "travis:test": "npm run test -- --runInBand"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devonreed/webpack-multilang-i18n-plugin.git"
    },
    "keywords": [
        "webpack",
        "i18n",
        "translate"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "moduleDirectories": [
            "node_modules",
            "bower_components",
            "shared"
        ],
        "moduleNameMapper": {
            "^js(.*)$": "<rootDir>/app/javascript/$1",
            "^vendor(.*)$": "<rootDir>/vendor/$1"
        },
        "browser": false
    },
    "author": "Devon Reed",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/devonreed/webpack-multilang-i18n-plugin/issues"
    },
    "homepage": "https://github.com/devonreed/webpack-multilang-i18n-plugin#readme",
    "devDependencies": {
        "babel-cli": "^6.24.0",
        "babel-jest": "^19.0.0",
        "babel-preset-env": "^1.5.1",
        "cross-env": "^5.0.1",
        "cryptiles": "^4.1.3",
        "eslint": "^3.19.0",
        "eslint-config-webpack": "^1.2.1",
        "eslint-plugin-import": "^2.2.0",
        "hoek": "^6.1.2",
        "https-proxy-agent": "^2.2.1",
        "jest": "^19.0.2",
        "lodash": "^4.17.11",
        "merge": "^1.2.1",
        "nsp": "^3.2.1",
        "randomatic": "^3.1.1",
        "sshpk": "^1.16.1",
        "tough-cookie": "^3.0.0",
        "webpack": "^4.29.1"
    },
    "peerDependencies": {
        "webpack": "^2.0.0 || >= 3.0.0-rc.0 || ^3.0.0",
        "webpack-sources": "^1.0.1"
    },
    "engines": {
        "node": ">= 4.3 < 5.0.0 || >= 5.10"
    }
}
